groups:
- name: ContainerHealth
  rules:
    - alert: ContainerCpuUsage
      expr: (sum(rate(container_cpu_usage_seconds_total{name!~"{{ container_ignore_list }}"}[3m])) BY (instance, name) * 100) > {{ container_cpu_limit }}
      for: 1m
      labels:
        severity: warning
      annotations:
        summary: "Container CPU usage (instance {{ '{{ $labels.instance }}' }})"
        description: "Container CPU usage is above {{ container_cpu_limit }}%\n  VALUE = {{ '{{ $value }}' }}\n  LABELS: {{ '{{ $labels }}' }}"
        value: "{{ '{{ $value }}' }}"
    - alert: ContainerMemoryUsage
      expr: (sum(container_memory_usage_bytes{name!~"{{ container_ignore_list }}"}) BY (instance, name) / sum(container_spec_memory_limit_bytes{name!~"{{ container_ignore_list }}"}) BY (instance, name) * 100) > {{ container_memory_limit }}
      for: 1m
      labels:
        severity: warning
      annotations:
        summary: "Container Memory usage (instance {{ '{{ $labels.instance }}' }})"
        description: "Container Memory usage is above {{ container_memory_limit }}%\n  VALUE = {{ '{{ $value }}' }}\n  LABELS: {{ '{{ $labels }}' }}"
        value: "{{ '{{ $value }}' }}"
