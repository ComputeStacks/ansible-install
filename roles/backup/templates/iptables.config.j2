#! /bin/bash

iptables -A INPUT -i lo -j ACCEPT
iptables -A INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT

{% for host in groups['controller'] %}
iptables -A INPUT -p all -s {{ hostvars[host].node_ip }} -j ACCEPT
{{ '' }}
{% endfor %}
{% for host in groups['prom_instance'] %}
{%- if not hostvars[host].on_controller -%}
iptables -A INPUT -p all -s {{ hostvars[host].node_ip }} -j ACCEPT
{{ '' }}
{%- endif -%}
{% endfor %}
{% for host in groups['nodes'] %}
iptables -A INPUT -p all -s {{ hostvars[host].consul_listen_ip }} -j ACCEPT
{{ '' }}
{% endfor %}

{% if enable_support_ip %}
iptables -A INPUT -p all -s {{ support_ip }} -j ACCEPT
{% endif %}

iptables -P INPUT DROP